generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto())  @map("_id") @db.ObjectId
  email String @unique
  name String
  password String
  role ROLE @default(USER)
}

model Me {
  id String @id @default(auto())  @map("_id") @db.ObjectId
  email String @unique
  name String
  description String
  currentRole String
  greeting String
}



enum ROLE {
  USER
  ADMIN
}